<main id="main" class="main">
   
<div class="container ">
    <div class="my-auto">
        <a class="btn btn-primary" href="/admin/add-coupon">Add Coupon</a>
    </div>
    </div>
    <!-- Default Table -->
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Coupon Code</th>
                <th scope="col">Min Amount</th>
                <th scope="col">Max Amount</th>
                <th scope="col">Expire Date</th>
                 <th scope="col">Percentage</th>
                 <th scope="col">Action</th>

                
            </tr>
        </thead>
        <tbody>
           {{#coupons}}
            <tr>
                <th scope="row">{{@index}}</th>
                <th scope="row">{{this.Name}}</th>
                <td scope="row">{{this.code}} </td>
                <td scope="row">{{this.minAmount}}</td>
                <td scope="row">{{this.maxAmount}}</td>
                <td scope="row">{{this.expireDate}}</td>
                 <td scope="row">{{this.percentage}}</td>
                 {{!-- <td scope="row">{{this.}}</td> --}}
            </tr>
           {{/coupons}}
            
                
        </tbody>
    </table>
    <!-- End Default Table Example -->
    </div>
    </div>
</main>